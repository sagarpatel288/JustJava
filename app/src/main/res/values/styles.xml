<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="MatchWidthWrapHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWidthWrapHeight.BesidePadding">
        <item name="android:paddingLeft">@dimen/view_space</item>
        <item name="android:paddingRight">@dimen/view_space</item>
    </style>

    <style name="MatchWidthWrapHeight.BesidePadding.SurroundPadding">
        <item name="android:paddingTop">@dimen/view_space</item>
        <item name="android:paddingBottom">@dimen/view_space</item>
    </style>

    <style name="MatchWidthWrapHeight.TextTitle">
        <item name="android:textSize">@dimen/tv_heading_three</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MatchWidthWrapHeight.Checkbox">
        <item name="android:paddingTop">@dimen/view_space</item>
        <item name="android:paddingLeft">@dimen/view_space_medium</item>
        <item name="android:paddingRight">@dimen/view_space_medium</item>
        <item name="android:paddingBottom">@dimen/view_space</item>
        <item name="android:textSize">@dimen/tv_heading_three</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">@dimen/tv_heading_three</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextBody.WrapWidthWrapHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
